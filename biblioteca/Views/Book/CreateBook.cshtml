@model biblioteca.RouteConfig

@{
    ViewBag.Title = "Registrar Libro";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    List<SelectListItem> itemsAutores = (List<SelectListItem>)ViewBag.itemsAutores;
}

<h2>Registrar Libro</h2>
<br/>
<form>
    <div class="form-group">
        <label for="exampleInputEmail1">Titulo del libro</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese Título">
        <small id="emailHelp" class="form-text text-muted">Tal como aparece en la portada.</small>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Editorial</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese Título">
        <small id="emailHelp" class="form-text text-muted">Tal como aparece en la portada.</small>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Año de publicación</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese Título">
        <small id="emailHelp" class="form-text text-muted">Tal como aparece en la portada.</small>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Tipo de Libro</label>
        @Html.DropDownList("Tipo", items, "Seleccione un tipo de libro", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Autor</label>
        @Html.DropDownList("Autores", itemsAutores, "Seleccione un autor", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i>  Registrar Libro</button>
</form>

