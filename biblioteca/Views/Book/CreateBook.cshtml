@model biblioteca.Models.ViewModels.CreateBookViewModel

@{
    ViewBag.Title = "Registrar Libro";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    List<SelectListItem> itemsAutores = (List<SelectListItem>)ViewBag.itemsAutores;
}

<h2>Registrar Libro</h2>
<br />
@using (Html.BeginForm("Save", "Book", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Titulo del Libro")
        @Html.TextBoxFor(d => d.Titulo, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Autor")
        @Html.DropDownListFor(d => d.Autor, itemsAutores, "Seleccione un autor", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Editorial")
        @Html.TextBoxFor(d => d.Editorial, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Año de Publicación")
        @Html.TextBoxFor(d => d.Anio, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Tipo de Libro")
        @Html.DropDownListFor(d => d.Tipo, items, "Seleccione un tipo de libro", new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i>  Registrar Libro</button>
}



