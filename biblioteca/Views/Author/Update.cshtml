@model biblioteca.Models.ViewModels.AutoresViewModel

@{
    ViewBag.Title = "Editar Autor";
}

<h2>@ViewBag.Title</h2>

<br />
@using (Html.BeginForm("Update", "Author", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Nombre")
        @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Nacionalidad")
        @Html.TextBoxFor(d => d.Nacionalidad, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Fecha de Nacimiento")
        @Html.EditorFor(d => d.FechaNacimiento, new { htmlAttributes = new { @class = "form-control datepicker" } })
    </div>


    <div class="form-group">
        @Html.Label("Descripción")
        @Html.TextAreaFor(d => d.Descripcion, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i>  Editar Autor</button>
}








