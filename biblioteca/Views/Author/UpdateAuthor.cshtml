@model List<biblioteca.Models.ViewModels.AutoresViewModel>

@{
    ViewBag.Title = "Modificar Autor";
}

<h2>@ViewBag.Title</h2>
<br />

<div class="row">
    <div class="col-md-12">

        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Nacionalidad</th>
                <th>Descripción</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Nacionalidad</td>
                    <td>@oElemento.Descripcion</td>
                    <td><a class="btn btn-warning" href="~/Author/Update/@oElemento.Id">Editar</a></td>
                </tr>
            }

        </table>
    </div>
</div>




