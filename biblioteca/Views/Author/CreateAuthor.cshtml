@model biblioteca.Models.ViewModels.AutoresViewModel
@{
    ViewBag.Title = "Registrar Autor";
}

<h2>@ViewBag.Title</h2>
<br />
@using (Html.BeginForm("Save", "Author", FormMethod.Post, new { id = "createAuthorForm" }))
{
    <div class="form-group">
        @Html.Label("Nombre")
        @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Nacionalidad")
        @Html.TextBoxFor(d => d.Nacionalidad, "", new { @class = "form-control" })
    </div>

    @Html.Label("Fecha de Nacimiento")
    <div class="form-group">
        <div class="container-fluid-no-padding">
            <div class="row">
                <div class='col-sm-3'>
                    <div class='input-group date' id='datetimepicker1'>
                        @Html.TextBoxFor(d => d.FechaNacimiento, new { @class = "form-control", @format = "dd/mm/YYYY" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Descripción")
        @Html.TextAreaFor(d => d.Descripcion, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i>  Registrar Autor</button>
}

<script language="javascript" src="~/Scripts/library-js/controls.js"></script>
<script language="javascript" src="~/Scripts/library-js/Author/createAuthor.js"></script>





